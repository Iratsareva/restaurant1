{
  "dashboard": {
    "title": "Restaurant Microservices Metrics",
    "tags": ["microservices", "spring-boot"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "5s",
    "panels": [
      {
        "id": 1,
        "title": "HTTP Requests Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(http_server_requests_seconds_count[5m])) by (instance)",
            "legendFormat": "{{instance}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Requests/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 7,
        "title": "Total Requests by Type",
        "type": "stat",
        "gridPos": {"h": 6, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "sum(restaurant_client_requests_total)",
            "legendFormat": "Client Requests",
            "refId": "A"
          },
          {
            "expr": "sum(restaurant_reservation_requests_total)",
            "legendFormat": "Reservation Requests",
            "refId": "B"
          },
          {
            "expr": "sum(restaurant_table_requests_total)",
            "legendFormat": "Table Requests",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "red", "value": 80}
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "title": "Request Duration by Operation",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(restaurant_client_operations_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "Client Operations",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(restaurant_reservation_operations_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "Reservation Operations",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(restaurant_table_operations_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "Table Operations",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Duration (95th percentile)"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "HTTP Request Duration",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_server_requests_seconds_bucket[5m])) by (le, instance))",
            "legendFormat": "{{instance}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Duration"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "title": "JVM Memory Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "sum(jvm_memory_used_bytes) by (instance)",
            "legendFormat": "{{instance}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "bytes", "label": "Memory"},
          {"format": "short"}
        ]
      },
      {
        "id": 4,
        "title": "Active Connections",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "sum(jdbc_connections_active) by (instance)",
            "legendFormat": "{{instance}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 5,
        "title": "RabbitMQ Messages",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "sum(rate(rabbitmq_messages_published_total[5m])) by (instance)",
            "legendFormat": "Published - {{instance}}",
            "refId": "A"
          },
          {
            "expr": "sum(rate(rabbitmq_messages_consumed_total[5m])) by (instance)",
            "legendFormat": "Consumed - {{instance}}",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Messages/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 9,
        "title": "Request Count Over Time",
        "type": "graph",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "increase(restaurant_client_requests_total[5m])",
            "legendFormat": "Client Requests",
            "refId": "A"
          },
          {
            "expr": "increase(restaurant_reservation_requests_total[5m])",
            "legendFormat": "Reservation Requests",
            "refId": "B"
          },
          {
            "expr": "increase(restaurant_table_requests_total[5m])",
            "legendFormat": "Table Requests",
            "refId": "C"
          },
          {
            "expr": "increase(http_server_requests_seconds_count[5m])",
            "legendFormat": "HTTP Requests",
            "refId": "D"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Request Count"},
          {"format": "short"}
        ]
      }
    ]
  }
}

